#!/bin/bash
if [ -n "$1" ]
then
	selection=$1
else
	selection=`nmcli c | sed '/wlan0/d' | tail -n +2 | awk '{print $1}' | dmenu  -i -l 100`
fi

if	[ -n "$selection" ]
then
	ssid=`nmcli c show $selection | ag '.ssid:' -Q | sed 's/^.*:\s\+//'`
	pwd=`nmcli c show $selection --show-secrets | ag '.psk:' -Q | awk '{print $2}'`
	scan=`nmcli device wifi list --rescan no | ag "${ssid}"`
	if [ -z "$scan" ]
	then
		scan=`nmcli device wifi list --rescan yes | ag "${ssid}"`
	fi

	if [ -n "$scan" ]
	then
		sudo nmcli dev wifi connect "$ssid" password "$pwd"
	else
		exit 1
	fi
fi
