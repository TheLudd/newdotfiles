#!/bin/bash
if [ -n "$1" ]
then
	selection=$1
else
	selection=`nmcli c | sed '/wlan0/d' | tail -n +2 | awk '{print $1}' | dmenu  -l 100`
fi

if	[ -n "$selection" ]
then
	ssid=`nmcli c show $selection | ag '.ssid:' -Q | sed 's/^.*:\s\+//'`
  sudo nmcli dev wifi connect "$ssid" > /dev/null 2>&1 & 
fi
