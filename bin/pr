#!/bin/bash
set -e

# Find base branch by -b flag
base=`echo $@ | sed -r 's/^.*-b ([^ ]+).*$/\1/'`

# Find reviewer by -r flag
reviewers=`echo $@ | sed -r 's/^.*-r ([^ ]+).*$/\1/'`

if [[ -z "$reviewers" ]]; then
	echo No reviewers specified
	exit 1
fi

for (( i=0; i<${#reviewers}; i++ )); do
  char="${reviewers:$i:1}"
  if [[ $char == "m" ]]; then
	  reviewer=magnusohlin
  elif [[ $char == "j" ]]; then
	  reviewer=joakimlandberg
  elif [[ $char == "o" ]]; then
	  reviewer=orestisrodriguez
  elif [[ $char == "y" ]]; then
	  reviewer=jjyoon7
  elif [[ $char == "c" ]]; then
	  reviewer=martinmartinchan
  elif [[ $char == "r" ]]; then
	  reviewer=rrahman-rexhepi
  elif [[ $char == "l" ]]; then
	  reviewer=olchyk98
  elif [[ $char == "a" ]]; then
	  reviewer=AnnaMalmgren
  elif [[ $char == "s" ]]; then
	  reviewer=Taff3r
  elif [[ $char == "x" ]]; then
	  reviewer=MaxLindblom
  elif [[ $char == "w" ]]; then
	  reviewer=SebCodesTheWeb
  fi
  r="$r,$reviewer"
done

r=${r:1}

nbrReviewers=`expr length $reviewers`
if [[ $nbrReviewers == 1 ]]; then
	approver=$r
else
	approver=theludd
fi

# Default base branch to master
if [[ $base == $@ ]]; then
	base=master
fi

nbrCommits=`git rev-list $base.. --count`

if [[ "$nbrCommits" == "0" ]]; then
	echo No commits since $base
	exit 1
fi

hub pull-request -b $base $opts -r $r -a $approver --push
