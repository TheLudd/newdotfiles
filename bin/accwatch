#!/bin/bash
file=$@

yarnVersion=`yarn --version`

if [[ "$yarnVersion" == 2* ]]; then
	cmd="yarn accept"
else
	cmd="yarn -s accept"
fi

if [[ -a "nodemon.json" ]]; then
	nodemon -q -e json,coffee,js,feature,feature-template,mjs,cjs,md -x "clear; $cmd $file"
else
	nodemon -q -i dist -i test -e json,coffee,js,feature,feature-template,mjs,cjs,md -x "clear; $cmd $file"
fi
