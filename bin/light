#!/bin/bash
max=`cat /sys/class/backlight/intel_backlight/max_brightness`
target=/sys/class/backlight/intel_backlight/brightness
current=`cat $target`

tenth=`expr $max / 10`

op=$1

if [[ -z "$op" ]]; then
	pct=`echo "scale=2;$current / $max" | bc -l | sed 's/\.//' | sed 's/^0*//'`
	printf "%3s%s%%" ${pct}
	exit 0
fi

if [[ "$op" == "max" ]]; then
	newValue=$max
elif [[ "$op" == "half" ]]; then
	newValue=`expr $max / 2`
elif [[ "$op" == "low" ]]; then
	newValue=$tenth
elif [[ "$op" == "dec" ]]; then
	newValue=`expr $current - $tenth`
	newValue=$(( $newValue < 10 ? 10 : $newValue ))
elif [[ "$op" == "inc" ]]; then
	newValue=`expr $current + $tenth`
	newValue=$(( $newValue > $max ? $max : $newValue ))
else
	echo no params
	exit 1
fi

echo $newValue > $target

kill -36 $(pidof dwmblocks)
