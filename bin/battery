for battery in /sys/class/power_supply/BAT?
do
    status=$(cat $battery/status)
    [[ "$status" == "Full" ]] && exit 0

    capacity=$(cat $battery/capacity)
    if [[ "$status" == "Charging" ]]; then
        icon=ðŸ”Œ
    elif (( capacity > 30 )); then
        icon=ðŸ”‹
    else
        icon=ðŸª«
    fi

    echo -e "$capacity% $icon"
done
